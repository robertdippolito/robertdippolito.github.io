{
    "Version": "2012-10-17",
    "Id": "PolicyForPipelineDeploy",
    "Statement": [
        {
            "Sid": "1",
            "Effect": "Allow",
            "Action": "cloudfront:CreateInvalidation",
            "Resource": "*"
        },
        {
            "Sid": "2",
            "Effect": "Allow",
            "Action": "s3:*",
            "Resource": [
                "arn:aws:s3:::*",
                "arn:aws:s3:::*"
              ]
        },
        {
            "Sid": "3",
            "Effect": "Allow",
            "Action": [
                "logs:CreateLogGroup",
                "logs:CreateLogStream",
                "logs:PutLogEvents"
              ],
            "Resource": "*"
        },
        {
            "Sid": "4",
            "Effect": "Allow",
            "Action": [
                "ssm:GetParameters"
              ],
            "Resource": "arn:aws:ssm:ca-central-1:978863440604:parameter/github-repo-key"
        }
    ]
}